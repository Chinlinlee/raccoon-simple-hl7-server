{
    "compilerOptions": {
        "target": "ES2020",
        "module": "Node16",
        "strict": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist/types"
    },
    "include": [
        "apps/**/*.ts",
        "libs/**/*.ts"
    ]
}
